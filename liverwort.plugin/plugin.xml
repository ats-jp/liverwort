<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="jp.ats.liverwort.plugin.properties.LiverwortPropertyPage"
            id="jp.ats.liverwort.plugin.propertyPage"
            name="Liverwort">
         <filter
               name="nature"
               value="org.eclipse.jdt.core.javanature">
         </filter>
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
            </adapt>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Liverwort"
            id="jp.ats.liverwort.plugin"/>
      <view
            class="jp.ats.liverwort.plugin.views.QueryEditorView"
            icon="icons/liverwort.png"
            category="jp.ats.liverwort.plugin"
            name="Liverwort Query Editor"
            id="jp.ats.liverwort.plugin.queryEditorView"/>
      <view
            category="jp.ats.liverwort.plugin"
            class="jp.ats.liverwort.plugin.views.ClassBuilderView"
            icon="icons/liverwort.png"
            id="jp.ats.liverwort.plugin.classBuilderView"
            name="Liverwort ORM Generator">
      </view>
   </extension>
   <extension
         id="jp.ats.liverwort.queryAssist"
         point="org.eclipse.jdt.ui.javaCompletionProposalComputer">
      <javaCompletionProposalComputer
            activate="true"
            categoryId="org.eclipse.jdt.ui.defaultProposalCategory"
            class="jp.ats.liverwort.plugin.QueryAssist"
            needsSortingAfterFiltering="false">
         <partition
               type="__dftl_partition_content_type">
         </partition>
      </javaCompletionProposalComputer>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="jp.ats.liverwort.plugin.commandCategory"
            name="Liverwort">
      </category>
      <command
            categoryId="jp.ats.liverwort.plugin.commandCategory"
            id="jp.ats.liverwort.plugin.restartQueryEditor"
            name="restartQueryEditor">
      </command>
      <command
            categoryId="jp.ats.liverwort.plugin.commandCategory"
            id="jp.ats.liverwort.plugin.restartORMGenerator"
            name="restartORMGenerator">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="jp.ats.liverwort.plugin.popup.actions.ChangeProjectHandler"
            commandId="jp.ats.liverwort.plugin.restartQueryEditor">
      </handler>
      <handler
            class="jp.ats.liverwort.plugin.popup.actions.ChangeProjectHandler"
            commandId="jp.ats.liverwort.plugin.restartORMGenerator">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               label="Liverwort">
           <visibleWhen
                 checkEnabled="false">
              <with
                    variable="activeMenuSelection">
                 <iterate>
                    <adapt
                          type="org.eclipse.core.resources.IProject">
                    </adapt>
                 </iterate>
              </with>
           </visibleWhen>
            <command
                  commandId="jp.ats.liverwort.plugin.restartQueryEditor"
                  icon="icons/liverwort.png"
                  label="Query Editor を起動する"
                  style="push">
            </command>
            <command
                  commandId="jp.ats.liverwort.plugin.restartORMGenerator"
                  icon="icons/liverwort.png"
                  label="ORM Generator を起動する"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
